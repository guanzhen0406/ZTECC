@{
    ViewBag.Title = "功能列表";
    Layout = "~/Views/Layout/_LayoutEmpty.cshtml";
}
@section ScriptsAndStyles{
    <link rel="stylesheet" type="text/css" href="~/Styles/KP_main.css" />
    <link rel="stylesheet" type="text/css" href="~/Styles/KP_special.css" />
    <link rel="stylesheet" type="text/css" href="~/Styles/KP_iframe.css" />
    <script type="text/javascript" src="~/Scripts/admin.js"></script>
}

<input type="hidden" id="ParentID" value="@ViewBag.ParentID"/>
<div class="header">@ViewBag.Title<i class="icon-remove" data-close="bgWrapperThree"></i></div>
<div style="height: 47px; background: white;">
    <div class="dataOperation">
        <input type="submit" class="doButton button" value="添加功能"
               data-wrapper-id="bgWrapperFour" data-detail-link="/Sys_Menu/AddFunction/@ViewBag.ParentID" />
    </div>
</div>
<div class="dataTableList">
    <table id="functionListDataTbl" style="width: 100%;">
        <thead>
            <tr>
                <th data-options="field:'Name',width:160,formatter:NameFormatter">菜单名称</th>
                <th data-options="field:'ControllerName',width:160">控制器</th>
                <th data-options="field:'ActionName',width:160">活动</th>
                <th data-options="field:'IsFirstSecondMenu',width:100,formatter:IsFirstOrSecondMenuFormatter">是一二级菜单</th>
                <th data-options="field:'Sort',width:60">排序</th>
                <th data-options="field:'ModifyTime',width:180,formatter:DateTimeFormatter">操作时间</th>
                <th data-options="field:'Operate',width:120,formatter:OperateFormatter">操作</th>
            </tr>
        </thead>
    </table>
</div>
